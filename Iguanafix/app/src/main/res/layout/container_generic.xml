<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:layout_width="60dp"
        android:scaleType="fitXY"
        android:layout_height="40dp"
        android:id="@+id/caffeIguanafix"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="user id"
        android:id="@+id/textfirstName"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/caffeIguanafix"
        android:layout_toLeftOf="@+id/textBirthDate"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="price"
        android:id="@+id/textBirthDate"
        android:textColor="@color/colorAccent"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textUserId"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/textfirstName"
        android:layout_toRightOf="@id/caffeIguanafix"
        android:layout_toEndOf="@id/caffeIguanafix"
        android:textColor="#666"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="sd"
        android:id="@+id/textCreatedAt"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/textUserId"
        android:layout_toRightOf="@id/caffeIguanafix"
        android:textColor="#666"/>

</RelativeLayout>

